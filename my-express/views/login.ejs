<html>
	<head>
		<meta charset="utf-8" />
		<title></title>
		<script src="/javascripts/jquery.min.js" type="text/javascript"></script>
	    <link rel="stylesheet" href="/stylesheets/login.css" />
	</head>
	<body>
		<div id="logo"><img src="http://www.doudoufei.top/shops/admin/images/shopex.png"></div>
		<div id="center-wrap">
			<div id="pic"><img src=" http://www.doudoufei.top/shops/admin/images/ecshop-logo.png"></div>
			<div id="login-panel">
				<p><b>用户名：</b><input type="text"  id="username"/></p>
				<p><b>密&nbsp;码：</b><input type="password"  id="psw"/></p>
				<p><b>验证码：</b><input type="text"  id="yzm"/><span><img src="http://www.doudoufei.top/shops/admin/index.php?act=captcha&"+{Math.random()*10000000000} class="yzm_img"></span></p>
				<button onclick="login()">登录</button>
			</div>
		</div>
	</body>
	<script type="text/javascript">
		function login() {
			$.ajax({
				url:"/loginajax",
				type:"post",
				data:{
					username:$("#username").val(),
					psw:$("#psw").val()
				},
				success: function(res) {
					console.log(res);
					if(res.code == 1) {
						location.href = "/list";
					} else {
						alert(res.message);
					}
				}
			});
		}
	</script>
</html>